<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MaterialTracking.ViewModels"
             
             xmlns:Model="clr-namespace:MaterialTracking.Views"
             
             x:Class="MaterialTracking.Views.MachineNoViews"
                          
             NavigationPage.HasNavigationBar="False"
             
             xmlns:viewModel ="clr-namespace:MaterialTracking.Views"
            >
    <!--<ContentPage.BindingContext>
        <viewModels:SupermarketViewModel  />
       
    </ContentPage.BindingContext>-->


    <Grid  >
        <StackLayout>
                <ScrollView>
                    <FlexLayout
                        BindableLayout.ItemsSource="{Binding MachineCollection}"
                        Wrap="Wrap"
                        Direction="Row"
                        JustifyContent="SpaceAround"
                        AlignItems="Start"
                        AlignContent="Start">       

                        <BindableLayout.ItemTemplate>
                            
                            <DataTemplate>
                                <Button
                                    Margin="4,16"
                                    CornerRadius="15"
                                    HeightRequest="120"
                                    WidthRequest="120"
                                    FontSize="Large"
                                    BackgroundColor="{StaticResource Key=BlueBacklight}"
                                    TextColor="{StaticResource Key=YellowColor}"
                                    Text="{Binding MachineNo}"
                                   Clicked="Button_Clicked"
                                   Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:MachineViewModel}}, Path=Cmd_Machine_click}"
                                   CommandParameter="{Binding Source={RelativeSource Self}, Path=Text}"
/>

                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>
               
            </StackLayout>
      
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" HeightRequest="40" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="40"/>

        </Grid>
   
</ContentPage>