<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaterialTracking.PageViews.Inventory_PageView" NavigationPage.HasNavigationBar="False">
    <StackLayout BackgroundColor="#dce7eb">
       
        <Frame HeightRequest="30" BackgroundColor="{StaticResource Purple}">
            <Label Text="CHẶT TỰ ĐỘNG/LASER INVENTORY" x:Name="lbl_Title" Margin="-5,-5" TextColor="White" FontSize="28" FontAttributes="Bold" 
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"/> 
        </Frame>
        <StackLayout Orientation="Horizontal">
            <SearchBar x:Name="searchBar" 
                       Placeholder="{Binding SearchBar_Holder}" 
                       PlaceholderColor="Gray"
                       BackgroundColor="White"
                                           
                       TextColor="{StaticResource GreenColor}" 
              
                       TextChanged="searchBar_TextChanged"
                       />
            <StackLayout Orientation="Horizontal">

                <RadioButton x:Name="rd_ctd" Content="Chặt TĐ" TextColor="{StaticResource BlueBackDark}" IsChecked="{Binding Ac_checked,Mode=TwoWay}" CheckedChanged="On_FilterChange_Event"/>
                <BoxView BackgroundColor="{StaticResource BlueSea}" WidthRequest="1" HorizontalOptions="Center" VerticalOptions="Center"/>

                <RadioButton  Content="LAZER" TextColor="{StaticResource BlueBackDark}" IsChecked="{Binding Lz_checked,Mode=TwoWay}" CheckedChanged="On_FilterChange_Event"/>
                <BoxView x:Name="rd_lz" BackgroundColor="{StaticResource BlueSea}" WidthRequest="1" HorizontalOptions="Center" VerticalOptions="Center"/>
            </StackLayout>
            <Label Text="0" x:Name="lbl_Tong" FontSize="18" TextColor="Black" VerticalOptions="Center" VerticalTextAlignment="Center"/>
        </StackLayout>
        <!--ColumnDefinitions="1.5*,1,*,1,*,1,*,1,*,1,*,1,*,1,4*,1,2*,1,*,1,*,1,*,1,*"-->
        <Grid   BackgroundColor="#36304a"
                HorizontalOptions="Fill" VerticalOptions="Fill" HeightRequest="50" Margin="10,0,0,0">
            
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="13.5" />
                    <Setter Property="TextColor" Value="White" />
                    <Setter Property="FontAttributes" Value="Bold" />
                    <Setter Property="HorizontalTextAlignment" Value="Center" />
                    <Setter Property="VerticalTextAlignment" Value="Center" />
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <!--0RY-->
                <ColumnDefinition Width="1"/>
                <!--1Frm-->
                <ColumnDefinition Width="0.7*"/>
                <!--2Art-->
                <ColumnDefinition Width="1"/>
                <!--3Frm-->
                <ColumnDefinition Width="1.5*"/>
                <!--4ModelName-->
                <ColumnDefinition Width="1"/>
                <!--5Frm-->
                <ColumnDefinition Width="1.2*"/>
                <!--6Line-->
                <ColumnDefinition Width="1"/>
                <!--7Frm-->
                <ColumnDefinition Width="1.1*"/>
                <!--8Prodate-->
                <ColumnDefinition Width="1"/>
                <!--9Frm-->
                <ColumnDefinition Width="0.7*"/>
                <!--10Target-->
                <ColumnDefinition Width="1"/>
                <!--11Frm-->
                <ColumnDefinition Width="0.7*"/>
                <!--12Actual-->
                <ColumnDefinition Width="1"/>
                <!--13Frm-->
                <ColumnDefinition Width="2*"/>
                <!--14Comp-->
                <ColumnDefinition Width="1"/>
                <!--15Frm-->
                <ColumnDefinition Width="2*"/>
                <!--16Going-->
                <ColumnDefinition Width="1"/>
                <!--17Frm-->
                <!--<ColumnDefinition Width="2*"/>-->
                <!--18Done-->
                <!--<ColumnDefinition Width="1"/>-->
                <!--19Frm-->
                <ColumnDefinition Width="2*"/>
                <!--20Delivered-->
                <ColumnDefinition Width="1"/>
                <!--21Frm-->
                <ColumnDefinition Width="*"/>
                <!--22Delayed-->
                <!--<ColumnDefinition Width="1"/>
                --><!--23Frm--><!--
                <ColumnDefinition Width="*"/>-->
                <!--24actiion-->

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Label  Text="{Binding Label_RY}"/>

            <Frame BackgroundColor="White" Grid.Column="1"/>

            <Label  Text="{Binding Label_Art}" Grid.Column="2"/>

            <Frame BackgroundColor="White" Grid.Column="3"/>

            <Label Text="{Binding Label_Model}" Grid.Column="4"/>

            <Frame BackgroundColor="White" Grid.Column="5"/>

            <Label Text="{Binding Label_Line}" Grid.Column="6"/>

            <Frame BackgroundColor="White" Grid.Column="7"/>

            <Label Text="{Binding Label_ProDate}" Grid.Column="8"/>

            <Frame BackgroundColor="White" Grid.Column="9"/>

            <Label Text="{Binding Label_Target}" Grid.Column="10"/>

            <Frame BackgroundColor="White" Grid.Column="11"/>

            <Label Text="{Binding Label_Actual}" Grid.Column="12"/>

            <Frame BackgroundColor="White" Grid.Column="13"/>

            <Label Text="{Binding Label_Comp}" Grid.Column="14"/>

            <Frame BackgroundColor="White" Grid.Column="15"/>

            <Label Text="{Binding Label_OG}" Grid.Column="16"/>

            <Frame BackgroundColor="White" Grid.Column="17"/>

            <Label Text="{Binding Delivered}" Grid.Column="18"/>

            <Frame BackgroundColor="White" Grid.Column="19"/>

            <Label Text="{Binding Delayed}" Grid.Column="20"/>

            <!--<Frame BackgroundColor="White" Grid.Column="21"/>

            <Label Text="Action" Grid.Column="22"/>-->

        </Grid>
        <ActivityIndicator IsVisible="{Binding IsBusy}" 
                                               IsRunning="{Binding IsBusy}" 
                                               HeightRequest="40" 
                                               WidthRequest="40"
                                               VerticalOptions="Center" 
                                               HorizontalOptions="Center" 
                                               Grid.ColumnSpan="20"/>
        <ListView ItemsSource="{Binding Data}" 
                  Margin="1,1,0,1" 
                  x:Name="LvData" 
                  BackgroundColor="#dce7eb" 
                  RowHeight="70" >

            <ListView.ItemTemplate >
                <DataTemplate>
                    <ViewCell>
                        <!--<ViewCell.ContextActions>-->
                        <!--<MenuItem Clicked="OnAdd"
                                    CommandParameter="{Binding .}"
                                    Text="Add" />
                                <MenuItem Clicked="OnDetails"
                                    CommandParameter="{Binding .}"
                                    Text="Detail" />-->

                        <!--</ViewCell.ContextActions>-->

                        <SwipeView Padding="-3.4" Margin="-5">
                            <SwipeView.RightItems>
                                <SwipeItems >
                                    <SwipeItem Text="Detail" BackgroundColor="{Binding BgrColor}" 
                                               Invoked="SwipeItem_Invoked"
                                                   />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Grid 
                                  BackgroundColor="#F1EFEF"
                                  HorizontalOptions="Fill" VerticalOptions="Fill" Margin="15,0,0,0">

                                <Grid.Resources>
                                    <Style TargetType="Label">
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="TextColor" Value="#36304a" />
                                        <Setter Property="FontAttributes" Value="Bold" />
                                        <Setter Property="HorizontalTextAlignment" Value="Center" />
                                        <Setter Property="VerticalTextAlignment" Value="Center" />
                                        <Setter Property="HorizontalOptions" Value="Fill"/>
                                        <Setter Property="VerticalOptions" Value="Fill"/>
                                        <Setter Property="Margin" Value="-5" />
                                        <Setter Property="Padding" Value="-3.40" />


                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.2*"/>
                                    <!--0RY-->
                                    <ColumnDefinition Width="1"/>
                                    <!--1Frm-->
                                    <ColumnDefinition Width="0.7*"/>
                                    <!--2Art-->
                                    <ColumnDefinition Width="1"/>
                                    <!--3Frm-->
                                    <ColumnDefinition Width="1.5*"/>
                                    <!--4ModelName-->
                                    <ColumnDefinition Width="1"/>
                                    <!--5Frm-->
                                    <ColumnDefinition Width="1.2*"/>
                                    <!--6Line-->
                                    <ColumnDefinition Width="1"/>
                                    <!--7Frm-->
                                    <ColumnDefinition Width="1.1*"/>
                                    <!--8Prodate-->
                                    <ColumnDefinition Width="1"/>
                                    <!--9Frm-->
                                    <ColumnDefinition Width="0.7*"/>
                                    <!--10Target-->
                                    <ColumnDefinition Width="1"/>
                                    <!--11Frm-->
                                    <ColumnDefinition Width="0.7*"/>
                                    <!--12Actual-->
                                    <ColumnDefinition Width="1"/>
                                    <!--13Frm-->
                                    <ColumnDefinition Width="2*"/>
                                    <!--14Comp-->
                                    <ColumnDefinition Width="1"/>
                                    <!--15Frm-->
                                    <ColumnDefinition Width="2*"/>
                                    <!--16Going-->
                                    <ColumnDefinition Width="1"/>
                                    <!--17Frm-->
                                    <!--<ColumnDefinition Width="2*"/>-->
                                    <!--18Done-->
                                    <!--<ColumnDefinition Width="1"/>-->
                                    <!--19Frm-->
                                    <ColumnDefinition Width="2*"/>
                                    <!--20Delivered-->
                                    <ColumnDefinition Width="1"/>
                                    <!--21Frm-->
                                    <ColumnDefinition Width="*"/>
                                    <!--22Delayed-->
                                    <!--<ColumnDefinition Width="1"/>
                                    -->
                                    <!--23Frm-->
                                    <!--
                                    <ColumnDefinition Width="*"/>-->
                                    <!--24actiion-->

                                </Grid.ColumnDefinitions>



                                <Label Text="{Binding ZLBH}" BackgroundColor="{Binding BgrColor}" HorizontalTextAlignment="Center"/>

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="1" />
                                <Label Text="{Binding Art}" Grid.Column="2" BackgroundColor="{Binding BgrColor}" />

                                <Frame BackgroundColor="#F1EFEF"  Grid.Column="3"/>
                                <Label Text="{Binding ModelName}" Grid.Column="4" BackgroundColor="{Binding BgrColor}" />

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="5"/>
                                <Label Text="{Binding Line}" Grid.Column="6" BackgroundColor="{Binding BgrColor}" />

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="7"/>
                                <Label Text="{Binding ProDate}" Grid.Column="8" BackgroundColor="{Binding BgrColor}" />

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="9"/>
                                <Label Text="{Binding Target}" Grid.Column="10" BackgroundColor="{Binding BgrColor}" />

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="11"/>
                                <Label Text="{Binding Actual}" TextColor="{Binding ColorFull}" BackgroundColor="{Binding BgrColor}" Grid.Column="12" />

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="13"/>
                                <Label Text="{Binding Components}" Grid.Column="14" BackgroundColor="{Binding BgrColor}" />

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="15"/>
                                <Label Text="{Binding OnGoing}" Grid.Column="16" BackgroundColor="{Binding BgrColor}" TextColor="{StaticResource RedColor}"/>

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="17"/>
                                <Label Text="{Binding Delivered}" Grid.Column="18" BackgroundColor="{Binding BgrColor}" />

                                <Frame BackgroundColor="#F1EFEF" Grid.Column="19"/>
                                <Frame BackgroundColor="{Binding BgrColorDelay}" Grid.Column="20" HorizontalOptions="Fill"
                                           VerticalOptions="Fill"/>

                                <Button BackgroundColor="Transparent" Command="{Binding ClickCommand}" CommandParameter="{Binding .}" Grid.ColumnSpan="21"/>


                            </Grid>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
   
    </StackLayout>
</ContentPage>