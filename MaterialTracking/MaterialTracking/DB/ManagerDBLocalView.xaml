<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaterialTracking.DB.ManagerDBLocalView" NavigationPage.HasBackButton="False" 
             xmlns:dg="clr-namespace:Xamarin.Forms.DataGrid;assembly=Xamarin.Forms.DataGrid"
             Title="{Binding Title}">
    <ContentView>
        <dg:DataGrid FontSize="18" 
                    ItemsSource="{Binding Data}" SelectionEnabled="True" 
                     SelectedItem="{Binding Selected}" 
                     ItemSelected="DataGrid_ItemSelected"
                     RowHeight="70" HeaderHeight="50"
                    BorderColor="#CCCCCC" 
                     HeaderBackground="#EF5B0C" 
                     PullToRefreshCommand="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsBusy}" 
                     ActiveRowColor="#8899AA"
                     >

                
         
            <dg:DataGrid.Columns  >
                             
                <dg:DataGridColumn PropertyName="Barcode" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="Barcode" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

                <dg:DataGridColumn PropertyName="Tua" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="Tua" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

                <dg:DataGridColumn PropertyName="ZLBH" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="ZLBH" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

                <dg:DataGridColumn PropertyName="CLBH" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="CLBH" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

                <dg:DataGridColumn PropertyName="XXCC" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="XXCC" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>


                <dg:DataGridColumn PropertyName="Target" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="Target" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

                <dg:DataGridColumn PropertyName="Qty" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="Qty" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

              

               

                <dg:DataGridColumn PropertyName="BWBH" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="BWBH" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>
                
                <dg:DataGridColumn PropertyName="isEdited" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="isEdited" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>


                <dg:DataGridColumn PropertyName="TempQty" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="TempQty" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

                <dg:DataGridColumn PropertyName="QtySql" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="QtySql" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

                <dg:DataGridColumn PropertyName="Isfull" Width="2*">
                    <dg:DataGridColumn.FormattedTitle>
                        <FormattedString>
                            <Span Text="Isfull" FontSize="20" TextColor="White" FontAttributes="Bold"/>
                        </FormattedString>
                    </dg:DataGridColumn.FormattedTitle>
                </dg:DataGridColumn>

            </dg:DataGrid.Columns>
           
            <dg:DataGrid.RowsBackgroundColorPalette>
                <dg:PaletteCollection>
                    <Color>
                        #D9F8C4
                    </Color>
                    <Color>#F9F9C5</Color>
                </dg:PaletteCollection>
            </dg:DataGrid.RowsBackgroundColorPalette>

        </dg:DataGrid>
    </ContentView>

</ContentPage>