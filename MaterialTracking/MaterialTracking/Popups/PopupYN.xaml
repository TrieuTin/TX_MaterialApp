
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaterialTracking.Popups.PopupYN"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit" xmlns:lottie="clr-namespace:Lottie.Forms;assembly=Lottie.Forms" 
           IsLightDismissEnabled="False" Size="650,350">
    <Grid Margin="10, 20,10,0" 
          
          RowDefinitions="75,*,80" 
          ColumnDefinitions="120,*" 
          
          HeightRequest="500" 
          
          WidthRequest="550"
          
          HorizontalOptions="Center" 
          
          VerticalOptions="Center">

        <lottie:AnimationView   Grid.Column="0" Grid.Row="1"
            Animation="Question.json"  
            RepeatMode="Infinite"  
            HeightRequest="180" 
            WidthRequest="180" 
            HorizontalOptions="CenterAndExpand" 
            VerticalOptions="CenterAndExpand"/>
        
        <Frame BackgroundColor="{Binding Theme}" Grid.Row="0" Grid.ColumnSpan="2">
            <Label x:Name="lbl_Title"
                   Text="{Binding LabelNotification}" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Start" 
                   VerticalOptions="Center" 
                   FontSize="Large" 
                   TextColor="#EBE4D1" />
        </Frame>

        <Label  Grid.Row="1" Grid.Column="1"
                x:Name="lbl_Content" 
                Text="{Binding LabelContent}"
                HorizontalOptions="Start" 
                VerticalOptions="Center"
                FontSize="Large" 
                TextColor="#26577C" />

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" ColumnDefinitions="*,*">
            <Button Text="{Binding ButtonName1}" 
                BackgroundColor="{Binding Theme}"
                TextColor="White" 
                CornerRadius="20" 
                HorizontalOptions="Center" 
                VerticalOptions="End"  
                Margin="5,0,0,5"
                Padding="0"
                WidthRequest="400"
                FontSize="20"
                Command="{Binding TapCommand_1}" 
                CommandParameter="{Binding ButtonName1}"/>

            <Button Grid.Column="1" Text="{Binding ButtonName2}" 
                BackgroundColor="#d87700"
                TextColor="White" 
                CornerRadius="20" 
                HorizontalOptions="Center" 
                VerticalOptions="End"  
                Margin="0,0,5,5"
                Padding="0"
                WidthRequest="400"
                FontSize="20"
                Command="{Binding TapCommand_2}"
                CommandParameter="{Binding ButtonName2}"/>
        </Grid>
        

    </Grid>
</xct:Popup>